.account-page
  background #f9f9f9
  .profile
    margin 30px auto
    text-align center
    .profile-pic
      img
        width 130px
    h4
      color #343434
      font-size 26px
  ul
    padding 0
    list-style none
    margin-bottom 60px
    border-bottom 1px solid #c8c8c8
    li
      padding 15px 10px
      background #fff
      border-top 1px solid #c8c8c8
      a.profile-link
        font-size 22px
        color #343434
        text-decoration none
        float left
      a.notiflink
        color #c3c3c3
        float right
        text-align right
        text-decoration none