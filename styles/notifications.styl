.notif
  margin-top 10px
  border-bottom 1px solid #ddd
  padding-bottom 20px
  h4
    font-size 24px
    color #343434
  p
    color #7c7c7c
    font-size 16px
  .timer
    color #a7a7a7
  .icon
    font-size 62px
    margin-top 10px
    display block
    text-align center
  .notif-label
    position absolute
    right 20px
    top 0
    color #ff0000
  
.notifications-setting
  background-image url(/images/bg-blur.jpg)
  -webkit-background-size cover
  -moz-background-size cover
  background-size cover
  background-repeat no-repeat
  padding 50px 5%
  margin 0
  width 100%
  height 100%
  text-align center
  margin 0
  h4
    font-size 22px
    color #fff
  p
    font-size 17px
    color #fff
  .btn-ok
    background-color #fff
    color  #0f110e
    border-radius 30px
    padding 10px 60px
    width 80%
    display block
    margin 10px auto
    font-size 22px
  small
    color #fff